<Alloy>
	<TableViewRow rowid="{id}" height="Ti.UI.SIZE" onClick="onClick" hasChild="true">
		
		<View id="dealImg_wrap" class="dealImg_wrap" layout="absolute">
			<ImageView id="img" image="{image}"></ImageView>
		</View>
		
		<View layout="horizontal" height="Ti.UI.SIZE" top="0">
			
			<View layout="absolute" height="Ti.UI.SIZE">
				<Label id="titleLbl" class="account_label" text="{name}"></Label>
			</View>
		
			<View layout="absolute" height="Ti.UI.SIZE">
				<Label id="priceLbl" text="{price}"></Label>
			</View>
			
		</View>
	</TableViewRow>
</Alloy>
