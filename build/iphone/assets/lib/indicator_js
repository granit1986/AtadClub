function createIndicatorWindow(t){function l(){r.open(),a.show()}function e(){a.hide(),r.close()}Ti.UI.FILL,Ti.UI.FILL;var o,t=t||{},i=t.top||0,s=t.text||"Loading ...",r=Titanium.UI.createWindow({fullscreen:!0,top:i,backgroundColor:"#000",opacity:.6,zIndex:10}),n=Ti.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.FILL,layout:"horizontal"});o=Ti.UI.iPhone.ActivityIndicatorStyle.PLAIN;var a=Ti.UI.createActivityIndicator({style:o,height:Ti.UI.FILL,width:Ti.UI.FILL,textAlign:"center",zIndex:12}),y=Titanium.UI.createLabel({textAlign:"center",left:10,width:Ti.UI.FILL,height:Ti.UI.FILL,text:s,color:"#fff",zIndex:11,font:{fontFamily:"Helvetica Neue",fontSize:16,fontWeight:"bold"}});return n.add(a),n.add(y),r.add(n),r.openIndicator=l,r.closeIndicator=e,r}exports.createIndicatorWindow=createIndicatorWindow;