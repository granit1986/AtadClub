function createProgressBar(t){function l(){s.open(),n.value=0,n.show()}function e(){n.hide(),s.close()}Ti.UI.FILL,Ti.UI.FILL;var o,t=t||{},i=t.top||0,s=Titanium.UI.createWindow({fullscreen:!0,top:i,backgroundColor:"#fff",opacity:.8}),r=Ti.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.FILL,layout:"horizontal"});o=Ti.UI.iPhone.ProgressBarStyle.PLAIN;var n=Ti.UI.createProgressBar({style:o,height:Ti.UI.FILL,width:Ti.UI.FILL,min:0,max:1,message:L("save_item"),color:"#555",font:{fontSize:"15dp",fontFamily:"Avenir Next Condensed"}});return r.add(n),s.add(r),s.openBar=l,s.setBarValue=function(t){n.value=t},s.closeBar=e,s}exports.createProgressBar=createProgressBar;