function ucfirst(t){return t?t[0].toUpperCase()+t.substr(1):t}var Alloy=require("alloy"),widgets={};module.exports=function(t){var l=this;return widgets[t]?widgets[t]:(this.widgetId=t,this.Collections={},this.Models={},this.Shared={},this.createController=function(l,e){return new(require("alloy/widgets/"+t+"/controllers/"+l))(e)},this.createCollection=function(l,e){return new(require("alloy/widgets/"+t+"/models/"+ucfirst(l)).Collection)(e)},this.createModel=function(l,e){return new(require("alloy/widgets/"+t+"/models/"+ucfirst(l)).Model)(e)},this.createWidget=Alloy.createWidget,this.Collections.instance=function(t){return l.Collections[t]||(l.Collections[t]=l.createCollection(t))},this.Models.instance=function(t){return l.Models[t]||(l.Models[t]=l.createModel(t))},void(widgets[t]=this))};